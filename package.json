{
  "name": "praktikum-messenger",
  "version": "1.0.0",
  "main": "src/app.ts",
  "scripts": {
    "copy": "cp -r src/static public",
    "watch:scss": "npm run build:scss && node-sass -wr src/styles/main.scss --source-map true public/styles.css",
    "watch:ts": "tsc -w",
    "develop": "npm run copy & watch & node server & npm run watch:scss & npm run watch:ts",
    "build:scss": "node-sass src/styles/main.scss --output-style compressed public/styles.css",
    "build:ts": "tsc",
    "build": "npm run copy && npm run build:scss && npm run build:ts",
    "test1": "mocha -r ts-node/register -r esm 'src/**/*.test.ts'",
    "test": "jest"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@babel/parser": "^7.10.5",
    "@babel/types": "^7.10.5",
    "@types/jest": "^26.0.5",
    "@types/node": "^14.0.23",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "handlebars": "^4.7.6",
    "jest": "^26.1.0",
    "nock": "^13.0.2",
    "node-sass": "^4.14.1",
    "ts-jest": "^26.1.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "xhr2": "^0.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "(.*)\\.js": "$1"
    }
  }
}
