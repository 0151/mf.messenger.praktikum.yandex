{
  "name": "praktikum-messenger",
  "version": "1.0.0",
  "main": "src/server.js",
  "scripts": {
    "watch:scss": "npm run build:scss && node-sass -wr src/styles/main.scss --source-map true public/styles.css",
    "watch:ts": "tsc -w",
    "develop": "node server & npm run watch:scss & npm run watch:ts",
    "build:scss": "node-sass src/styles/main.scss --output-style expanded public/styles.css",
    "build:ts": "tsc",
    "build": "npm run build:scss && npm run build:ts"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "node-sass": "^4.14.1",
    "typescript": "^3.9.7"
  }
}
